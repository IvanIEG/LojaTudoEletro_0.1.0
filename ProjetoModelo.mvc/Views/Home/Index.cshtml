                                            <a href="preview.html"><img src="~/Content/uploads/fotosProdutos/@imagem.UrlImagem" width="500px" height="500px" alt="learn more"/></a>
                                        </div>
                                        <div class="slider-text">
                                            <h1>@product.Description<br><span></span>
                                            </h1>
                                            <h2>@product.Price</h2>
                                            <div class="features_list">
                                                <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                            </div>
                                            <a href="preview.html" class="button">Shop Now</a>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                }
                            }
                        }
                    }
                

                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>

